<ul>
  <% if ::Refinery::Products::Admin::ProductsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.products_admin_products_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_products_admin_product_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Products::Admin::ProductsController.sortable? && ::Refinery::Products::Product.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.products_admin_products_path,
                     t('.reorder', what:  "Products"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.products_admin_products_path,
                      t('.reorder_done', what: "Products"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
